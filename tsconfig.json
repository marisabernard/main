
{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist",
    "lib": [ "es2015", "dom" ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "compileOnSave": true
}
